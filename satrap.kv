<RecordsHeadingLabel@Label>:
    size_hint: 0.2, 1.0
    bold: True
    font_size: dp(20)
    outline_color: 0,0,0,1
    outline_width: 1
    canvas:
        Color:
            rgba: 0,0,0,1
        Line:
            points: (root.x, root.y, root.x + root.width, self.y)
            
<RecordsHeadingLayout@BoxLayout>:
