#:kivy 2.1.0
#:import Factory kivy.factory.Factory

<TabbedWindow>:
    do_default_tab: False

    ListTab:
        text: "Observer"
        
        on_press: self._update_list(list_page)
        
        ListPage:
            id: list_page
    
    AddTab:
        text: "Add"

        AddPage:
    


##### Add page section

<QuestionDropDown>:
    max_height: dp(90)
    
<MyOption@SpinnerOption>:
    height: dp(30)

<MySpinner>:
    dropdown_cls: 'QuestionDropDown'
    option_cls: 'MyOption'


<InputFormLabel>:
    font_size: dp(14)
    on_kv_post: self.on_pawn
    font_name: "IranSans/IranSans.ttf"

<AddPage>:
    padding: dp(20)
    spacing: dp(10)
    orientation: "vertical"

    InputEntryLayout:
        id: input_name
        InputFormLabel:
            #text:"Nam va Family"
            text: "نام و نام خانوادگی"
    InputEntryLayout:
        id: input_account
        InputFormLabel:
            #text:"Account"
            text:"آدرس اکانت"
    InputEntryLayout:
        id: input_mobile_no
        InputFormLabel:
            #text:"Mobile No"
            text:"موبایل"
    InputEntryLayout:
        id: input_password
        InputFormLabel:
            #text:"Kalame Oboor"
            text:"پسورد"
    InputEntryLayout:
        id: input_email
        InputFormLabel:
            #text:"Email"
            text:"ایمیل"
    InputEntryLayout:
        id: input_birthdate
        InputFormLabel:
            #text:"birthdate"
            text:"تاریخ تولد"
    MySpinner:
        id: q1
        text: 'Question 1'
        values: "What is the first name of your best friend in high school?", "What was the name of your first pet?", "What was the first thing you learned to cook?", "What was the first film you saw in the theater?", "Where did you go the first time you flew on a plane?", "What is the last name of your favorite elementary school teacher?"
    TextInput:
        id: q1_answer
        multiline: False
        write_tab: False

    MySpinner:
        id: q2
        text: 'Question 2'
        values: "What is your dream job?", "What is your favorite children's book?", "What was the model of your first car?", "What was your childhood nickname?", "Who was your favorite film star or character in school?", "Who was your favorite singer or band in high school?"
    TextInput:
        id: q2_answer
        multiline: False
        write_tab: False

    MySpinner:
        id: q3
        text: "Question 3"
        values: "In what city did your parents meet?", "What was the first name of your first boss?", "What is the name of the street where you grew up?", "What is the name of the first beach you visited?", "What was the first album that you purchased?", "What is the name of your favorite sports team?"  
    TextInput:
        id: q3_answer
        multiline: False
        write_tab: False

    ## Add button
    Button:
        id: add_button
        text: "Add"
        # Pass all TextInput input texts
        on_press: root.add_button_pressed(input_email.children[1], input_password.children[1], input_mobile_no.children[1], input_account.children[1], input_name.children[1], q1.text, q1_answer.text, q2.text, q2_answer.text, q3.text, q3_answer.text, input_birthdate.children[1])


# Each text input in input form
<InputEntryLayout>:
    # Child 0 ---> Label
    # Child 1 ---> TextInput
    orientation: "horizontal"
    TextInput:
        multiline: False
        write_tab: False
    

