<ListPage>:
    orientation: "vertical"

    padding: 20
    spacing: 10

    ## SearchBox
    BoxLayout:
        size_hint: 1, 0.1
        orientation: "horizontal"
        spacing: dp(5)

        TextInput:
            id: search_text_input
            size_hint: 0.9, 1
            focus: True
            multiline: False
            write_tab: False
            text_validate_unfocus: False
            on_text_validate: root.on_search_press(search_text_input)

        Button:
            id: search_button
            size_hint: 0.1, 1
            text: "search"
            on_press: root.on_search_press(search_text_input)

    RecordsHeadingLayout:

    ## ListBox
    ScrollView:
        RecordsGridLayout:
            cols: 1
            size_hint: 1, None
            height: self.minimum_height                
            
            #CDataLayouts get added here


<CDataLayout>:
    size_hint: 1, None
    height: dp(50)
    orientation:"horizontal"
    spacing: dp(5)
    padding: dp(5)

    ImageButton:
        id: copy_btn
        size_hint: None, None
        size: dp(40), dp(40)
        text: "C"
        hover_image: "Images/copy_hover.png"
        source: "Images/copy.png"

    ImageButton:
        size_hint: None, None
        size: dp(40), dp(40)
        id: delete_btn
        text: "D"
        hover_image: "Images/remove_hover.png"
        source: "Images/remove.png"
    ImageButton:
        size_hint: None, None
        id: info_btn
        size: dp(40), dp(40)
        text: "O"
        source: "Images/magnifier.png"        


<RecordsHeadingLabel>:
    size_hint: 0.2, 1.0
    bold: True
    font_size: dp(20)
    outline_color: 0,0,0,1
    outline_width: 1
    on_kv_post: self.on_pawn
    font_name: "IranSans/IranSans.ttf"

    canvas:
        Color:
            rgba: 0,0,0,1
        Line:
            points: (root.x, root.y, root.x + root.width, self.y)
            
<RecordsHeadingLayout@BoxLayout>:
    size_hint: 1, None
    height: dp(50)
    orientation:"horizontal"
    spacing: dp(5)
    padding: dp(5)

    # A place holder for aligning rows with the heading
    RecordsHeadingLabel:
        size_hint: None, None
        size: dp(130), dp(40)
        disabled: True
        #text: "Actions"
        text: "اعمال"

    RecordsHeadingLabel:
        #text: "Name"
        text: "نام"
       
    RecordsHeadingLabel:
        #text: "Email"#get_display(arabic_reshaper.reshape(u"ایمیل")) or "hello"
        text: "ایمیل"
          
    RecordsHeadingLabel:
        #text: "Phone"
        text: "شماره تلفن"

    RecordsHeadingLabel:
        text: "آدرس اکانت"
            
    RecordsHeadingLabel:
        text: "پسورد"
